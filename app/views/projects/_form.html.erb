    <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></l1>
      <% end %>
    </ul>
<% end %>

<div class="form-container">
  <%= form_for @project do |f| %>
    <form class="form-horizontal">
      <fieldset>

        <div class="row">
          <div class="form-group col-lg-6">
            <%= f.label :name, class: "col-lg-6 control-label" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="form-group col-lg-6">
            <%= f.label :max_allowed_hours, class: "col-lg-6 control-label" %>
            <%= f.text_field :max_allowed_hours, class: "form-control" %>
          </div>
        </div>

       <%= f.submit, class: "btn btn-primary" %>
      </fieldset>
    </form>
  <% end %>
</div>
