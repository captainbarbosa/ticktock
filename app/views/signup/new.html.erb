<h2 class="authentication-headline">Sign Up</h2>

<div class="form-container">
  <%= form_for @developer, url: signup_path do |f| %>
  <form class="form-horizontal">
    <fieldset>

      <div class="row">
        <div class="form-group col-lg-6">
          <%= f.label :email, class: "col-lg-6 control-label" %>
          <%= f.text_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="form-group col-lg-6">
          <%= f.label :password, class: "col-lg-6 control-label" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="form-group col-lg-6">
          <%= f.label :password_confirmation, class: "col-lg-6 control-label" %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>

    <%= f.submit "Create Account", class: "btn btn-primary" %>
  <% end %>
</div>
